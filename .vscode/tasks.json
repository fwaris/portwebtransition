{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run MAUI MacCatalyst",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/samples/CuaSample",
        "-t:Run",
        "-f",
        "net10.0-maccatalyst",
        "-c",
        "Debug"
      ],      
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run MAUI iOS Simulator",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/samples/CuaSample",
        "-t:Run",
        "-f",
        "net10.0-ios",
        "-p:RuntimeIdentifier=iossimulator-arm64",
        "-p:_DeviceName=v2:udid=E1652AF2-D4EB-4678-A39F-D26E548730CD",
        "-p:Configuration=Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run MAUI Android",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/samples/CuaSample",
        "-t:Run",
        "-f",
        "net10.0-android",
        "-p:Configuration=Debug"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
